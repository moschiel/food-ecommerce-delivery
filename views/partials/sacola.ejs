<% const homeRout = '/'; %> 

<%# inclui .icone-sacola se estiver na home %>
<% if (rout == homeRout) { %>
<div class="icone-sacola" onclick="toggleSacola()">
  <i class="fas fa-shopping-bag fa-3x"></i>
  <div class="icone-sacola-num">0</div>
</div>
<% } %>
 
<%# determina visualizacao inicial da sacola dependendo da rota %> 
